#!/bin/bash

RUN_DIR=/var/vcap/sys/run/service-broker
LOG_DIR=/var/vcap/sys/log/service-broker
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE
    # set gopath
    export GOPATH=/home/vcap/packages/
	  export PATH=$PATH:$GOPATH/bin
    # set env variables
    export BROKER_PASSWORD=<%= p('broker.password') %>
    export BROKER_USERNAME=<%= p('broker.username') %>
    export DIEGO_DRIVER_SPEC=<%= p('diego_driver') %>
    export EMC_SERVICE_NAME=<%= p('emc_service_name') %>
    # Generate?
    export EMC_SERVICE_UUID=<%= p('emc_service_uuid') %>
    export INSECURE=<%= p('insecure') %>
    export LIB_STOR_SERVICE=<%= p('lib_stor_service') %>
    export LIBSTORAGE_URI=<%= p('libstorge_uri') %>
    # start app
    cd /var/vcap/packages/cf-persist-service-broker

    exec /var/vcap/packages/ruby_1.9.3/bin/bundle exec \
      rackup -p <%= properties.web_ui.port %> \
      >>  $LOG_DIR/web_ui.stdout.log \
      2>> $LOG_DIR/web_ui.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
